<Page
    x:Name="pageRoot"
    x:Class="Kozlowski.Slideshow.MainPage"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Kozlowski.Slideshow"
    xmlns:common="using:Kozlowski.Slideshow.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <!-- Collection of items displayed by this page -->
        <CollectionViewSource x:Name="ItemsViewSource" Source="{Binding Items}"/>
    </Page.Resources>

    <Page.BottomAppBar>
        <AppBar x:ConnectionId='1' x:Name="MainAppBar"                           >
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <AppBarButton x:ConnectionId='5' Name="OpenButton" Icon="OpenWith" Label="Open With" ToolTipService.ToolTip="Open File with Another Application"                         TabIndex="4"/>
                </StackPanel>
                <StackPanel VerticalAlignment="Center" Margin="280,0">
                    <TextBlock Name="FileName" FontSize="20" TextAlignment="Center" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <AppBarButton x:ConnectionId='2' Name="PlayButton" Icon="Play" Label="Play" ToolTipService.ToolTip="Play"                    Visibility="Collapsed" AutomationProperties.AccessKey="Space" TabIndex="1"/>
                    <AppBarButton x:ConnectionId='3' Name="PauseButton" Icon="Pause" Label="Pause" ToolTipService.ToolTip="Pause"                     AutomationProperties.AccessKey="Space" TabIndex="2"/>
                    <ComboBox x:ConnectionId='4' Name="Interval"                                     Width="126" Height="30" VerticalAlignment="Center" PlaceholderText="Select Interval" TabIndex="3">
                        <x:String>5 seconds</x:String>
                        <x:String>10 seconds</x:String>
                        <x:String>30 seconds</x:String>
                        <x:String>1 minute</x:String>
                        <x:String>3 minutes</x:String>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </AppBar>
    </Page.BottomAppBar>

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <FlipView x:ConnectionId='6' x:Name="FlipView" ItemsSource="{Binding Source={StaticResource ItemsViewSource}}"                                             >
            <FlipView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Image Source="{Binding Image}" Stretch="Uniform"/>
                    </Grid>
                </DataTemplate>
            </FlipView.ItemTemplate>
        </FlipView>
    </Grid>
</Page>

